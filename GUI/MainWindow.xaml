<Window x:Class="UVSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:UVSim" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="UVSim Editor"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        MinHeight="360"
        MinWidth="640"
        Width="960"
        Height="540"
        KeyDown="Window_KeyDown"
        Background="{Binding Source={x:Static local:App.Theme}, Path=Background}">

    <Window.Resources>
        <!-- Define Brushes based on the theme -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=Background}" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=Foreground}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=Accent}" />
        <SolidColorBrush x:Key="BorderBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=Border}" />
        <SolidColorBrush x:Key="HeaderBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=Header}" />
        <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=TextBoxBackground}" />
        <SolidColorBrush x:Key="TextBoxBorderBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=TextBoxBorder}" />
        <SolidColorBrush x:Key="ButtonBorderBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=ButtonBorder}" />
        <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=ButtonBackground}" />
        <SolidColorBrush x:Key="CodeSpaceBrush" Color="{Binding Source={x:Static local:App.Theme}, Path=CodeSpace}" />
    </Window.Resources>

    <Grid x:Name="MainGrid" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- CodeSpace Header -->
        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}" x:Name="BorderCodeSpace" Margin="5" Width="Auto" Grid.ColumnSpan="3">
            <Grid Background="{StaticResource HeaderBrush}" MinHeight="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Location" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBlock Grid.Column="1" Text="Instruction" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBlock Grid.Column="2" Text="Data" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}"/>
            </Grid>
        </Border>

        <!-- CodeSpace (ListBox with Relative Max Height) -->
        <ListBox x:Name="ListboxCodeSpace"
                     Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="8"
                     BorderThickness="1"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Background="{StaticResource CodeSpaceBrush}"
                     BorderBrush="{StaticResource BorderBrush}"
                     Width="Auto" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" TextAlignment="Center" Text="{Binding LineNumber}" VerticalAlignment="Center" Foreground="{StaticResource ForegroundBrush}" Margin="5,0,5,0"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding DataContext.Instructions, RelativeSource={RelativeSource AncestorType=Window}}" SelectedValue="{Binding Instruction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="."/>
                        <xctk:IntegerUpDown Grid.Column="2" TextAlignment="Center" Value="{Binding Data, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="5" Foreground="{StaticResource ForegroundBrush}" Background="{StaticResource TextBoxBackgroundBrush}" BorderBrush="{StaticResource TextBoxBorderBrush}" PreviewTextInput="OnData_TextInput" Maximum="99" Minimum="-99" Margin="5,0,5,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Buttons (Save/Upload) -->
        <Border Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}" x:Name="BorderCodeSpaceFooter" Background="{StaticResource HeaderBrush}" MinHeight="40" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Click="OnSave_Click" Grid.Column="0" Background="{StaticResource ButtonBackgroundBrush}" BorderBrush="{StaticResource ButtonBorderBrush}" Foreground="{StaticResource ForegroundBrush}" Margin="5">Save</Button>
                <Button Click="OnLoad_Click" Grid.Column="1" Background="{StaticResource ButtonBackgroundBrush}" BorderBrush="{StaticResource ButtonBorderBrush}" Foreground="{StaticResource ForegroundBrush}" Margin="5">Load</Button>
                <Button Click="OnTheme_Click" Grid.Column="2" Background="{StaticResource ButtonBackgroundBrush}" BorderBrush="{StaticResource ButtonBorderBrush}" Foreground="{StaticResource ForegroundBrush}" Margin="5">Theme</Button>
            </Grid>
        </Border>

        <!-- Register Space -->
        <Border Grid.Column="3"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Margin="5"
                x:Name="BorderRegister">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Accumulator: " Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBlock Name="TextAccumulator" Text="" Foreground="{DynamicResource ForegroundBrush}"/>
            </StackPanel>
        </Border>

        <!-- Control Buttons -->
        <Button Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Content="Execute" Background="{StaticResource ButtonBackgroundBrush}" Foreground="{StaticResource ForegroundBrush}" BorderBrush="{StaticResource ButtonBorderBrush}" Click="OnExecute_Click" Margin="10"/>
        <StackPanel Grid.Column="3"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom">
            
        </StackPanel>

        <!-- Output Section -->
        <Border Grid.Column="3"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Grid.RowSpan="6"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Margin="5"
                Padding="5"
                x:Name="BorderOutput">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="14" Grid.Row="0" Text="Output" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                <TextBox Name="TextOutput" IsReadOnly="True" Grid.Row="1" Text="{Binding ConsoleOutput}" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" Background="{StaticResource TextBoxBackgroundBrush}" BorderBrush="{StaticResource TextBoxBorderBrush}">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>
        </Border>

        <!-- Input Section -->
        <Border Grid.Column="3"
                Grid.Row="8"
                Grid.ColumnSpan="2"
                Grid.RowSpan="2"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Margin="5"
                Padding="5"
                x:Name="BorderInput">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="14" Grid.Row="0" Text="Input" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                <TextBox IsReadOnly="True" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="{StaticResource TextBoxBackgroundBrush}" BorderBrush="{StaticResource TextBoxBorderBrush}" Foreground="{DynamicResource ForegroundBrush}">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Button Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Content="Send" Margin="5" x:Name="ButtonSendInput" Foreground="{DynamicResource ForegroundBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>

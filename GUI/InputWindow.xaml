<Window x:Class="UVSim.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UVSim" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Enter Input" Height="175" Width="200" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Memory Capacity:" Margin="0,0,0,5"/>
        <xctk:IntegerUpDown Name="InputCapacity" Maximum="250" Minimum="1" Value="250"/>

        <TextBlock Text="Initial Lines:" Margin="0,0,0,5"/>
        <xctk:IntegerUpDown Name="InputInitial" Maximum="250" Minimum="1" Value="250"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
